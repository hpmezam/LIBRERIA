@model IEnumerable<Libreria.Entidades.Libro>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de Libros</h4>
<hr />
<p>
    <button type="button" class="btn btn-outline-success" onclick="location.href='@Url.Action("Create")'">
       Nuevo
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AñoPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutorId)
            </th>
            <th>
                @Html.DisplayName("<----------- Opciones ----------->")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AñoPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nombre)
            </td> 
            <td>
                    @Html.ActionLink("Editar", "Edit", new { id=item.Id }, new {@class="btn btn-outline-warning"})
                    @Html.ActionLink("Detalle", "Details", new { id=item.Id }, new {@class="btn btn-outline-info"})
                    @Html.ActionLink("Eliminar", "Delete", new { id=item.Id }, new {@class="btn btn-outline-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
